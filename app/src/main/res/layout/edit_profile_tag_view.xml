<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edit_profile_tag_view_item"
    android:background="@color/hh_background_light2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="16sp"
                    android:gravity="left|center"
                    android:text="@string/help_us_match_your_taste"
                    android:textColor="@color/hh_edittext_text_color"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/tag_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:textSize="16sp"
                    android:gravity="left|center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/hh_text_color"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:textSize="14sp"
                android:gravity="right|center"
                android:text="@string/save"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/hh_edittext_hint_color"/>

        </LinearLayout>
        <include layout="@layout/auto_search_viewer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/select_all_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            >

            <CheckBox
                android:id="@+id/select_all_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_all"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@string/font_family_medium"
                android:textColor="@color/hh_text_color7"/>

        </LinearLayout>

        <include layout="@layout/fragment_tag"></include>
    </LinearLayout>
</LinearLayout>