<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/category_item_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_profile_bg"
        android:layout_marginStart="16dp"
        android:tint="@color/hh_text_color"
        />

    <TextView
        android:id="@+id/category_item_name"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/category_item_image"
        android:gravity="left|center"
        android:text="jhgjggjh"
        android:fontFamily="@string/font_family_medium"
        android:textSize="14sp"
        android:textColor="@color/hh_drawer_list_item_text"
        />
</android.support.constraint.ConstraintLayout>