<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hh_background_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/buy"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/buy_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:textSize="16sp"
                android:gravity="left"
                android:textColor="@color/hh_edittext_text_color"/>


            <TextView
                android:id="@+id/buy_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/hh_text_color"/>

           <!-- <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
           -->     <TextView
                    android:id="@+id/buy_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:textColor="@color/hh_green_light2"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp" />

               <!-- <TextView
                    android:id="@+id/top_product_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:layout_marginStart="1dp"
                    android:textColor="@color/hh_green_light2"
                    android:text="jhjhjh"
                    android:textSize="16sp" />-->
           <!-- </LinearLayout>-->

        </LinearLayout>


        <Button
            android:id="@+id/buy"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_bg"
            android:text="@string/buy"
            android:layout_gravity="center"
            android:fontFamily="@string/font_family_medium"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hh_line_color"></View>

</LinearLayout>