<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/hh_background_light"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="20sp"
                    android:text="@string/our_story"
                    android:textColor="@color/hh_edittext_text_color"
                    />

                <!--<com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:colorClickableText="@color/hh_green_light2"
                    android:fontFamily="@string/font_family_regular"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_gravity="left|center"
                    android:textColor="@color/hh_edittext_text_color"
                    app:trimLines="6"
                    />-->

                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@string/font_family_regular"
                    android:textSize="16sp"
                    android:text="@string/our_story_details"
                    android:textColor="@color/hh_edittext_text_color"
                    app:colorClickableText="@color/hh_green_light2"
                    app:trimLines="12"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hh_line_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="20sp"
                    android:text="@string/our_team"
                    android:textColor="@color/hh_edittext_text_color"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="8dp">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="20sp"
                    android:text="@string/events"
                    android:textColor="@color/hh_edittext_text_color"
                    />

                <TextView
                    android:id="@+id/events_details_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@string/font_family_regular"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:text="@string/events_details"
                    android:textColor="@color/hh_edittext_text_color"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hh_line_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="20sp"
                    android:text="@string/blog_network"
                    android:textColor="@color/hh_edittext_text_color"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@string/font_family_regular"
                    android:textSize="16sp"
                    android:text="@string/blog_network_details"
                    android:textColor="@color/hh_edittext_text_color"
                    />

                <Button
                    android:id="@+id/contact_us"
                    android:layout_width="170dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_bg"
                    android:text="@string/contact_us"
                    android:layout_gravity="left"
                    android:fontFamily="@string/font_family_medium"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hh_line_color"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>