        />-->

    <ImageView
        android:id="@+id/article_bookmark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|right"
        android:scaleType="center"
        android:src="@mipmap/ic_bookmark" />

</FrameLayout>